if [[ "$OSTYPE" == "darwin"* ]]; then
  path=(
    # Postgres CLI
    /usr/local/opt/libpq/bin
    # Ruby
    /opt/homebrew/opt/ruby/bin
    # Node version management
    $VOLTA_HOME/bin
    # Docker Desktop
    $HOME/.docker/bin
    # Inherit PATH
    $path
  )

  # Add to ZSH function paths
  fpath=(
    "${XDG_DATA_HOME:-${HOME}/.local/share}/zsh/completions"
    $fpath
  )
fi
